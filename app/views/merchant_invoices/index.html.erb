<body>
 <div class="merch_header"> Little Esty Shop</div><br>
 <div class ="merch_nav_button"><%= link_to "Merchant Discounts", merchant_bulk_discounts_path(@merchant) %></div>
 <div class ="merch_current_button"><%= link_to "Merchant Invoices", "/merchants/#{@merchant.id}/invoices" %></div>
 <div class ="merch_nav_button"><%= link_to "Merchant Items", "/merchants/#{@merchant.id}/items" %></div>
 <div class ="merch_nav_button"><%= link_to "Merchant Dashboard", "/merchants/#{@merchant.id}/dashboard" %></div>
<h3> <%= @merchant.name %> </h3>
<br><br>

<div class="merch_sub_full_center">
  <h3> My Invoices</h3></div><br>
    <ol><% @merchant.invoices.distinct.each do |i| %>
      <%= link_to "Invoice ##{i.id}", "/merchants/#{@merchant.id}/invoices/#{i.id}" %> | 
        <%= i.format_date %> | 
        <b>Status:</b> <%= i.status.titleize %><br><br>
    <% end %>
  </ol>
</div>